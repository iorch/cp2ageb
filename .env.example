# Configuración de PostgreSQL
POSTGRES_DB=cp2ageb
POSTGRES_USER=geouser
POSTGRES_PASSWORD=geopassword

# Puerto de PostgreSQL (por defecto 5432)
POSTGRES_PORT=5432

# Control de descarga y carga automática de shapefiles
# true = automático, false = manual
AUTO_DOWNLOAD=true
AUTO_LOAD=true

# Control de capas INEGI a cargar
# Por defecto solo AGEBs (reduce tiempo de ~23h a ~8-10h)
# Cambiar a "true" para cargar capas adicionales
LOAD_AGEBS=true          # AGEBs urbanas y rurales (NECESARIO para CP→AGEB)
LOAD_MANZANAS=false      # Manzanas (opcional, aumenta tiempo ~50%)
LOAD_LOCALIDADES=false   # Localidades (opcional)
LOAD_MUNICIPIOS=false    # Municipios (opcional)
LOAD_ENTIDADES=false     # Entidades/Estados (opcional)

# Control de estados a cargar
# Útil para pruebas rápidas o cargas parciales
# Formatos válidos:
#   - Códigos: "14,09,19" (Jalisco, CDMX, Nuevo León)
#   - Abreviaturas: "Jal,BC,CDMX"
#   - Nombres completos: "Jalisco,Baja California,Ciudad de México"
#   - Mixto: "14,BC,Jalisco"
# Por defecto: Jalisco, Edo Mex, CDMX, Nuevo León (principales zonas metropolitanas)
# Cambiar a "all" para cargar todos los 32 estados
# Ejemplo para probar solo uno: LOAD_ESTADOS="14" (solo Jalisco, CP 44100)
LOAD_ESTADOS=14,15,09,19
